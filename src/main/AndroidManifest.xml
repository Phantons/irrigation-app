<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cano0.riegapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ControllerActivity"
            android:label="@string/title_activity_controller"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DatosActivity"
            android:label="@string/title_activity_datos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddControlador" />
        <activity android:name=".ModesActivity" />
        <activity
            android:name=".ModeActivity"
            android:label="@string/title_activity_mode"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ZoneActivity"
            android:label="@string/title_activity_zone"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>